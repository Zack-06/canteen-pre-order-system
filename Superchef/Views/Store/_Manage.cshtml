@model ManageStoreVM

@using Superchef.Services
@inject GenerateLinkService GenerateLinkService

<div class="container" data-manage-container="table" data-responsive-container>
    <table>
        <thead>
            <tr>
                @foreach (var f in ViewBag.Fields)
                {
                    var url = GenerateLinkService.GetSortLink(
                    action: "Manage",
                    controller: "Store",
                    field: f,
                    currentSort: Model.Sort,
                    currentDir: Model.Dir
                    );

                    <th class="@Model.Dir @(f == Model.Sort ? "selected" : "")">
                        <a data-ajax="true" data-ajax-url="@url" data-ajax-update="#ajax-result-container">@f</a>
                    </th>
                }
                <th>Action</th>
            </tr>
        </thead>

        <tbody data-result-container>
            @foreach (var store in Model.Results)
            {
                <tr>
                    <td>@store.Id</td>
                    <td>@store.Name</td>
                    <td>@store.Slug</td>
                    <td>@store.Items.Count(i => !i.IsDeleted)</td>
                    <td>@store.Venue.Name</td>
                    <td>
                        <div class="button-group" data-flex="inline">
                            <a href="/Store/Edit/@store.Id" data-button="accent">Edit</a>
                            <a data-ajax="true" data-ajax-url="@Url.Action("Delete", new { Id = store.Id })"
                                data-ajax-method="POST" data-ajax-failure="defaultOnFailure" data-ajax-success="reloadPage"
                                data-ajax-confirm="Are you sure you want to delete this store?"
                                data-button="danger">Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <partial name="_NoResults" model="null" />
</div>

@Html.PagedListPager(Model.Results,
page => GenerateLinkService.GetPageLink("Manage", "Store", page.ToString()),
PagedListRenderOptions.EnableUnobtrusiveAjaxReplacing(ManagePageHelper.GetPagedOption(),
ManagePageHelper.GetAjaxOption())
)
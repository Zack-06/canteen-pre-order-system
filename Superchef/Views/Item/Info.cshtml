@section foot {
    <script src="/js/medium-zoom.min.js"></script>
    <script>
        $("#gallery-container img").on("click", function () {
            $("#gallery-container img.selected").removeClass("selected")
            $(this).addClass("selected")
            $(".image-container>img").attr("src", $(this).attr("src"))
        })

        function updateVariantStockCount(variantId) {
            $.ajax({
                url: '/Item/VariantStockCount',
                type: 'GET',
                data: { id: variantId },
                success: function (data) {
                    $("#stock-count").text(data.stock)
                }
            })
        }

        $(document).on("change", "input[name='Variant']", function () {
            // Update image
            const variantImage = $(`#gallery-container img[data-variant-id='${$(this).val()}']`)
            if (variantImage.length > 0) {
                $("#gallery-container img.selected").removeClass("selected")
                variantImage.addClass("selected")
                $(".image-container>img").attr("src", variantImage.attr("src"))
            }

            updateVariantStockCount($(this).val())
        })

        const orderConnection = new signalR.HubConnectionBuilder().withUrl("/OrderHub").build()
        orderConnection.on("UpdateStock", function (variantId) {
            updateVariantStockCount(variantId)
        })
        orderConnection.start()

        mediumZoom('.image-container>img', {
            scrollOffset: 0,
            background: 'rgba(0, 0, 0, 0.9)',
        })

        $(document).on("click", "#own-review-container .empty-star", function () {
            const rating = $(this).index() + 1
            $(this).closest(".rating-stars-container").attr("data-rating", rating)
            $("#own-review-rating-input").val(rating)
        })

        function addToCartFailure(xhr, status, error) {
            if (xhr.status === 400 || xhr.status === 404) {
                const errorField = $("#error-field")
                if (errorField.length === 0) return

                errorField.text(xhr.responseText)
                errorField.addClass("field-validation-error")
            } else if (xhr.status === 401 || xhr.status === 403) {
                window.location.href = "@Url.Action("Login", "Auth", new { ReturnUrl = currentUrl })"
            }
        }

        function addToCartSuccess(data, status, xhr) {
            const errorField = $("#error-field")
            if (errorField.length > 0) {
                errorField.text("")
                errorField.removeClass("field-validation-error")
            }

            showToast("Item added to cart")
        }

        function toggleFavouriteFailure(xhr, status, error) {
            if (xhr.status === 401 || xhr.status === 403) {
                window.location.href = "@Url.Action("Login", "Auth", new { ReturnUrl = currentUrl })"
                return
            }

            defaultOnFailure(xhr, status, error)
        }

        function toggleFavouriteSuccess(data, status, xhr) {
            if (xhr.responseText == "added") {
                showToast("Item added to favourites")
                $("#add-to-favourite-button").addClass("favourite")
            } else {
                showToast("Item removed from favourites")
                $("#add-to-favourite-button").removeClass("favourite")
            }
        }

        function addReviewSuccess(data, status, xhr) {
            showToast("Review added")
            $("#own-review-container").html(data)
        }
    </script>
}
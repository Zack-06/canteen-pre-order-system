<div id="item-details-container" class="container">
    <div class="image-container">
        <img src="/uploads/item/@Model.Item.Image" alt="Preview Image">
        <div id="gallery-container">
            <img src="/uploads/item/@Model.Item.Image" alt="Item Image" class="selected">
            @foreach (var variants in Model.Item.Variants.Where(v => v.IsActive))
            {
                <img src="/uploads/variant/@variants.Image" alt="Variant Image" data-variant-id="@variants.Id">
            }
        </div>
    </div>
    <div class="info-container">
        <div class="name">abc</div>
        <div class="stat">
            @if (Model.TotalReviews > 0)
            {
                <div class="rating-container">
                    <span>@FormatHelper.ToRatingFormat(ratingValue)</span>
                    <div class="rating-stars-container">
                        <div class="empty-star">
                            <div class="star-setter">
                                <div class="star"></div>
                            </div>
                        </div>
                        <div class="empty-star">
                            <div class="star-setter">
                                <div class="star"></div>
                            </div>
                        </div>
                        <div class="empty-star">
                            <div class="star-setter">
                                <div class="star"></div>
                            </div>
                        </div>
                        <div class="empty-star">
                            <div class="star-setter">
                                <div class="star"></div>
                            </div>
                        </div>
                        <div class="empty-star">
                            <div class="star-setter">
                                <div class="star"></div>
                            </div>
                        </div>
                    </div>
                </div>
                <span>|</span>
            }
            <span class="review" data-count="@Model.TotalReviews">@Model.TotalReviews</span>
            <span>|</span>
            <span>@Model.TotalSold Sold</span>
        </div>
        <div class="price">
            <span>@FormatHelper.ToRMFormat(minPrice, false)</span>
            @if (maxPrice != minPrice)
            {
                <span>@FormatHelper.ToRMFormat(maxPrice, false)</span>
            }
        </div>

        <form asp-action="AddToCart" method="post" data-ajax="true" data-ajax-failure="addToCartFailure"
            data-ajax-success="addToCartSuccess">

            <div data-column-container="2">
                <div>Variant</div>
                <div class="custom-tick-container center-text-container">
                    @foreach (var variant in Model.Item.Variants.Where(v => v.IsActive))
                    {
                        <label>
                            <input type="radio" name="Variant" value="@variant.Id">
                            <div>
                                <div class="text">@variant.Name</div>
                            </div>
                        </label>
                    }
                </div>

                <div>Quantity</div>
                <div id="quantity-container">
                    <div class="form-group">
                        <div class="form-input">
                            <button type="button" data-quantity-button="minus">&#8203;</button>
                            <input name="Quantity" data-no-negative type="number" min="1" max="10" step="1">
                            <button type="button" data-quantity-button="add"></button>
                        </div>
                    </div>
                    <span id="stock-count"></span>
                    <span id="error-field"></span>
                </div>
            </div>

            <div class="container" data-no="padding color margin" data-flex="gap between">
                <button data-button="accent">Add to Cart</button>
                <a data-ajax="true" data-ajax-method="POST" data-ajax-failure="toggleFavouriteFailure"
                    data-ajax-success="toggleFavouriteSuccess"
                    data-ajax-url="@Url.Action("ToggleFavourite", new { Id = Model.Item.Id })"
                    id="add-to-favourite-button" class="@(ViewBag.IsFavourite == true ? "favourite" : "")"></a>
            </div>
        </form>
    </div>
    <div class="social-container">
        <a class="facebook" href="https://www.facebook.com/sharer/sharer.php?u=@currentUrl" target="_blank"></a>
        <a class="x" href="https://x.com/intent/tweet?url=@currentUrl" target="_blank"></a>
        <a class="whatsapp" href="https://wa.me/?text=@currentUrl" target="_blank"></a>
        <a class="telegram" href="https://t.me/share/url?url=@currentUrl" target="_blank"></a>
    </div>
</div>

@{
    var storeDetails = new StoreDetailsContainerDM
    {
        Image = $"/uploads/store/{Model.Item.Store.Image}",
        Name = Model.Item.Store.Name,
        Slug = Model.Item.Store.Slug,

@model ManageOrderVM

@section head {
    <style>
        [data-manage-container="table"] tbody tr td:nth-child(1) {
            grid-area: id;
        }

        [data-manage-container="table"] tbody tr td:nth-child(2) {
            grid-area: customer-name;
        }

        main.mobile [data-manage-container="table"] tbody tr td:nth-child(2)::before {
            content: "Name: ";
        }

        [data-manage-container="table"] tbody tr td:nth-child(3) {
            grid-area: customer-id;
        }

        main.mobile [data-manage-container="table"] tbody tr td:nth-child(3)::before {
            content: "ID: ";
        }

        [data-manage-container="table"] tbody tr td:nth-child(4) {
            grid-area: status;
        }

        [data-manage-container="table"] tbody tr td:nth-child(5) {
            grid-area: pickup-at;
        }

        main.mobile [data-manage-container="table"] tbody tr td:nth-child(5)::before {
            content: "Pickup At: ";
        }

        [data-manage-container="table"] tbody tr td:nth-child(6) {
            grid-area: created-at;
        }

        main.mobile [data-manage-container="table"] tbody tr td:nth-child(6)::before {
            content: "Created At: ";
        }

        [data-manage-container="table"] tbody tr td:last-child {
            grid-area: action;
        }

        main.mobile [data-manage-container="table"] tbody tr {
            grid-template-areas:
                "id id"
                "created-at created-at"
                "pickup-at pickup-at"
                ". status"
                ". action"
                "customer-name action"
                "customer-id action"
            ;
            grid-template-columns: 1fr auto;
        }
    </style>
}

<form class="container" data-no="color padding">
    <div id="filter-overlay" class="overlay sidebar-overlay">
        <div class="content">
            <div class="header">
                <div class="title">Filter By</div>
                <div class="close"></div>
            </div>

            <div class="body">
                <div class="form-group">
                    <label>Status</label>
                    <div class="custom-tick-container center-text-container small-text rounded-border">
                        @foreach (var status in Model.AvailableStatuses)
                        {
                            <label>
                                <input type="checkbox" name="Statuses" value="@status" @(Model.Statuses.Contains(status) ?
                                                                                                                       "checked" : "")>
                                <div>
                                    <div class="text">@status</div>
                                </div>
                            </label>
                        }
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="PickupFrom"></label>
                    <div class="form-input">
                        <input asp-for="PickupFrom" />
                    </div>
                    <span asp-validation-for="PickupFrom"></span>
                </div>

                <div class="form-group">
                    <label asp-for="PickupTo"></label>
                    <div class="form-input">
                        <input asp-for="PickupTo" />
                    </div>
                    <span asp-validation-for="PickupTo"></span>
                </div>

                <div class="form-group">
                    <label asp-for="CreationFrom"></label>
                    <div class="form-input">
                        <input asp-for="CreationFrom" />
                    </div>
                    <span asp-validation-for="CreationFrom"></span>
                </div>

                <div class="form-group">
                    <label asp-for="CreationTo"></label>
                    <div class="form-input">
                        <input asp-for="CreationTo" />
                    </div>
                    <span asp-validation-for="CreationTo"></span>
                </div>
            </div>

            <div class="button-group">
                <button type="button" data-button="accent" data-clear-form>Reset</button>
                <button type="submit" data-button>Apply</button>
            </div>
        </div>
    </div>


    <div class="container" data-manage-container="query">
        <div class="title">Manage Orders - @ViewBag.StoreName</div>

        <div class="form-group">
            <div class="input-group search-container">
                <div class="form-input">
                    <input asp-for="Search" data-clear-form-ignore />
                    <button type="submit">
                        <img src="/img/search.png" alt="Search">
                    </button>
                </div>
                <div class="custom-select">
                    <select>
                        <option value="1" selected>Search By Id</option>
                        <option value="2">Search By Customer Name</option>
                        <option value="3">Search By Customer Id</option>
                    </select>
                </div>
                <button type="button" id="filter-button">
                    Filter
                    <img src="/img/filter.png">
                </button>
            </div>
        </div>
    </div>

    <div id="ajax-result-container">
        <div class="container" data-manage-container="table" data-responsive-container>
            <table>
                <thead>
                    <tr>
                        <th class="asc selected">
                            <a href="/Customer/Manage?Dir=desc&amp;Sort=Id&amp;Page=1&amp;SearchOption=name"
                                data-ajax="true" data-ajax-update="#ajax-result-container">Id</a>
                        </th>
                        <th class="asc ">
                            <a href="/Customer/Manage?Dir=asc&amp;Sort=Name&amp;Page=1&amp;SearchOption=name"
                                data-ajax="true" data-ajax-update="#ajax-result-container">Customer Name</a>
                        </th>
                        <th class="asc ">
                            <a href="/Customer/Manage?Dir=asc&amp;Sort=Email&amp;Page=1&amp;SearchOption=name"
                                data-ajax="true" data-ajax-update="#ajax-result-container">Customer Id</a>
                        </th>
                        <th class="asc ">
                            <a href="/Customer/Manage?Dir=asc&amp;Sort=Email&amp;Page=1&amp;SearchOption=name"
                                data-ajax="true" data-ajax-update="#ajax-result-container">Status</a>
                        </th>
                        <th class="asc ">
                            <a href="/Customer/Manage?Dir=asc&amp;Sort=Email&amp;Page=1&amp;SearchOption=name"
                                data-ajax="true" data-ajax-update="#ajax-result-container">Pickup At</a>
                        </th>
                        <th class="asc ">
                            <a href="/Customer/Manage?Dir=asc&amp;Sort=Creation%20Date&amp;Page=1&amp;SearchOption=name"
                                data-ajax="true" data-ajax-update="#ajax-result-container">Created At</a>
                        </th>
                        <th>Action</th>
                    </tr>
                </thead>


@model ManageCategoryVM

@{
    ViewBag.Title = "Manage Categories | Superchef";
}

@section head {
    <style>
        [data-manage-container="table"] tbody tr td:nth-child(1) {
            grid-area: id;
        }

        main.mobile [data-manage-container="table"] tbody tr td:nth-child(1)::before {
            content: "ID: ";
        }

        [data-manage-container="table"] tbody tr td:nth-child(2) {
            grid-area: name;
        }

        [data-manage-container="table"] tbody tr td:nth-child(3) {
            grid-area: items-count;
        }

        main.mobile [data-manage-container="table"] tbody tr td:nth-child(3)::before {
            content: "Items Count: ";
        }

        [data-manage-container="table"] tbody tr td:last-child {
            grid-area: action;
        }

        main.mobile [data-manage-container="table"] tbody tr {
            grid-template-areas:
                "name name"
                "items-count items-count"
                ". ."
                "id action"
            ;
            grid-template-columns: 1fr auto;
        }
    </style>
}

<form data-ajax="true" data-ajax-update="#ajax-result-container" data-ajax-complete="closeOverlay('filter-overlay')"
    class="container" data-no="color padding">
    <input type="hidden" name="Page" value="1" data-clear-form-ignore>

    <div id="filter-overlay" class="overlay sidebar-overlay">
        <div class="content">
            <div class="header">
                <div class="title">Filter By</div>
                <div class="close"></div>
            </div>

            <div class="body">
                <div class="form-group">
                    <label asp-for="MinItemsCount"></label>
                    <div class="form-input">
                        <input asp-for="MinItemsCount" />
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="MaxItemsCount"></label>
                    <div class="form-input">
                        <input asp-for="MaxItemsCount" />
                    </div>
                </div>
            </div>

            <div class="button-group">
                <button type="button" data-button="accent" data-clear-form>Reset</button>
                <button type="submit" data-button>Apply</button>
            </div>
        </div>
    </div>


    <div class="container" data-manage-container="query">
        <div class="title">Manage Categories</div>

        <div class="form-group">
            <div class="input-group search-container">
                <div class="form-input">
                    <input asp-for="Search" data-clear-form-ignore />
                    <button type="submit">
                        <img src="/img/search.png" alt="Search">
                    </button>
                </div>
                <div class="custom-select">
                    <select asp-for="SearchOption" asp-items="Model.AvailableSearchOptions"></select>
                </div>
                <a href="/Category/Add" data-button="info">Add Category</a>
                <button type="button" id="filter-button">
                    Filter
                    <img src="/img/filter.png">
                </button>
            </div>
        </div>
    </div>

    <div id="ajax-result-container">
        <partial name="_Manage" model="Model" />
    </div>
</form>
@model RegisterVM
@inject IConfiguration cf

@{
    var siteKey = cf["RecaptchaSettings:SiteKey"];
}

<div class="container container-center" data-limit-container>
    <div class="title">Welcome to Superchef</div>

    <form method="post" onsubmit="onSubmit(event)">
        <input type="hidden" id="recaptcha-token-input" asp-for="RepatchaToken" />

        <div class="form-group">
            <label asp-for="Name"></label>
            <div class="form-input">
                <input asp-for="Name" />
            </div>
            <span asp-validation-for="Name"></span>
        </div>

        <div class="form-group">
            <label asp-for="Email"></label>
            <div class="form-input">
                <input asp-for="Email" />
            </div>
            <span asp-validation-for="Email"></span>
        </div>

        <div class="form-group">
            <label asp-for="Password"></label>
            <div class="form-input">
                <input asp-for="Password" />
                <input type="checkbox" class="password-show-button">
            </div>
            <span asp-validation-for="Password"></span>
        </div>

        <div class="form-group">
            <label asp-for="ConfirmPassword"></label>
            <div class="form-input">
                <input asp-for="ConfirmPassword" />
                <input type="checkbox" class="password-show-button">
            </div>
            <span asp-validation-for="ConfirmPassword"></span>
        </div>

        <div class="form-group">
            <div id="captcha-element"></div>
            <span asp-validation-for="RepatchaToken"></span>
        </div>

        <div class="form-group">
            <button type="submit" data-button>Register</button>
        </div>

        <div class="form-group">
            <span>Have an account?&nbsp</span>
            <a href="@Url.Action("Login", "Auth")" data-preserve-search-params>Login</a>
        </div>
    </form>
</div>

@section foot {
    <script>
        var onloadCallback = function () {
            grecaptcha.render("captcha-element", {
                "sitekey": "@siteKey"
            })
        }

        function onSubmit(event) {
            var token = grecaptcha.getResponse()
            $("#recaptcha-token-input").val(token)
        }
    </script>
    <script src="https://www.google.com/recaptcha/api.js?onload=onloadCallback&render=explicit" async defer></script>
}
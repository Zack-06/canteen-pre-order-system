@model RegisterVM

<div class="container container-center">
    <div class="title">Welcome to Superchef</div>

    <form method="post">
        <div class="form-group">
            <label asp-for="Name"></label>
            <div class="form-input">
                <input asp-for="Name" />
            </div>
            <span asp-validation-for="Name"></span>
        </div>

        <div class="form-group">
            <label asp-for="Email"></label>
            <div class="form-input">
                <input asp-for="Email" />
            </div>
            <span asp-validation-for="Email"></span>
        </div>

        <div class="form-group">
            <label asp-for="Password"></label>
            <div class="form-input">
                <input asp-for="Password" />
                <input type="checkbox" class="password-show-button">
            </div>
            <span asp-validation-for="Password"></span>
        </div>

        <div class="form-group">
            <label asp-for="ConfirmPassword"></label>
            <div class="form-input">
                <input asp-for="ConfirmPassword" />
                <input type="checkbox" class="password-show-button">
            </div>
            <span asp-validation-for="ConfirmPassword"></span>
        </div>

        <div class="form-group">
            <button type="submit" data-button>Register</button>
        </div>

        <div class="form-group">
            <span style="margin-right: 0.5rem;">Have an account?</span>
            <a href="@Url.Action("Login", "Auth")">Login</a>
        </div>
    </form>
</div>
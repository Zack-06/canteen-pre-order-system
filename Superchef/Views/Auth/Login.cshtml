@model LoginVM

<div class="container container-center" data-limit-container>
    <div class="title">Welcome to Superchef</div>

    <form method="post">
        <div class="form-group">
            <label asp-for="Email"></label>
            <div class="form-input">
                <input asp-for="Email" />
            </div>
            <span asp-validation-for="Email"></span>
        </div>

        <div class="form-group">
            <label asp-for="Password"></label>
            <div class="form-input">
                <input asp-for="Password" />
                <input type="checkbox" class="password-show-button">
            </div>
            <span asp-validation-for="Password"></span>
        </div>

        <div class="form-group space-between">
            <button type="submit">Login</button>
            <a class="" href="@Url.Action("ForgotPassword", "Auth")">Forgot Password?</a>
        </div>

        <div class="form-group">
            <span>New User?&nbsp</span>
            <a href="@Url.Action("Register", "Auth")" data-preserve-search-params>Register</a>
        </div>
    </form>
</div>
<div class="container container-center">
    <div class="title">Welcome to Superchef</div>
    <form action="" method="post">
        <div class="form-group">
            <label for="email">Email</label>
            <div class="form-input">
                <input type="text" id="email" name="email" />
            </div>
            <div class="form-error" data-error="email"></div>
        </div>

        <div class="form-group">
            <label for="password">Password</label>
            <div class="form-input">
                <input type="password" id="password" name="password" />
                <input type="checkbox" class="password-show-button">
            </div>
            <div class="form-error" data-error="password"></div>
        </div>

        <div class="form-group wrapper-container">
            <button type="submit">Login</button>
            <a class="" href="@Url.Action("ForgotPassword", "Auth")">Forgot Password?</a>
        </div>

        <div class="form-group">
            <span style="margin-right: 0.5rem;">New User?</span>
            <a href="@Url.Action("Register", "Auth")">Register</a>
        </div>
    </form>
</div>
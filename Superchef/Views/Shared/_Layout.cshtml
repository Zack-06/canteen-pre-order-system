<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="shortcut icon" href="/img/logo/favicon.png" type="image/x-icon">
    <link rel="stylesheet" href="/css/pager.css">
    <link rel="stylesheet" href="/css/app.css" asp-append-version="true">
    <script>
        const FALLBACK_IMAGE = "/img/no_image.png";
        document.addEventListener("error", function (e) {
            if (e.target.tagName && e.target.tagName.toLowerCase() === "img") {
                if (e.target.src !== location.origin + FALLBACK_IMAGE) {
                    e.target.src = FALLBACK_IMAGE;
                }
            }
        }, true);
    </script>

    @RenderSection("head", false)
</head>

<body>
    @* @if (ViewBag.AccountType == null || ViewBag.AccountType == "Customer")
    {
        <partial name="_Header" />
    }
    else
    {
        <partial name="_AdminHeader" />
    } *@

    <div class="page">
        @* <partial name="_Header" /> *@
        <partial name="_VendorHeader" />
        @* <partial name="_AdminHeader" /> *@

        <main>
            @RenderBody()
        </main>
    </div>

    <footer>
        <span>Copyright Â© @DateTime.Now.Year Superchef Canteen Pre-Order System. All Rights Reserved</span>

        <div class="info-links-wrapper">
            <div class="info-links">
                <a href="/Info/About" target="_blank">About Superchef</a>
                <a href="/Info/Privacy" target="_blank">Privacy Policy</a>
                <a href="/Info/Contact" target="_blank">Contact Us</a>
            </div>
        </div>

        <div class="social-media-icons">
            <a style="background-image: url('/img/facebook.svg'); " href="
                    https://www.facebook.com/malaysia_superchef" target="_blank"></a>
            <a style="background-image: url('/img/instagram.svg'); "
                href=" https://www.instagram.com/malaysia_superchef" target="_blank"></a>
            <a style="background-image: url('/img/youtube.svg'); "
                href="@("https://www.youtube.com/@malaysia_superchef")" target="_blank"></a>
        </div>
    </footer>

    <div class="toast-container" data-toast-message="@TempData["Message"]"></div>

    <div id="confirmation-popup" class="overlay">
        <div class="content">
            <div class="body">
                <div class="title"></div>
                <div class="button-group">
                    <button id="confirmation-popup-confirm" data-button="success"></button>
                    <button id="confirmation-popup-cancel" data-button="danger"></button>
                </div>
            </div>
        </div>
    </div>

    <script src="/js/jquery.min.js"></script>
    <script src="/js/jquery.unobtrusive-ajax.js"></script>
    <script src="/js/jquery.validate.min.js"></script>
    <script src="/js/jquery.validate.unobtrusive.min.js"></script>
    <script src="/js/signalr.min.js"></script>
    <script src="/js/app.js" asp-append-version="true"></script>
    @RenderSection("foot", false)
</body>

</html>
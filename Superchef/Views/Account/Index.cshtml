@model AccountProfileVM

@section head {
    <style>
        main>.container {
            max-width: 60rem;
        }

        main>.container form {
            display: grid;
            grid-template-columns: 2fr auto 1fr;
            grid-template-areas: "info . pfp";
            grid-gap: 3rem;
        }

        @@media (max-width: 600px) {
            main>.container form {
                grid-template-columns: 1fr;
                grid-template-areas: "pfp" "info";
            }

            main>.container form .divider {
                display: none;
            }
        }

        #pfp-container {
            grid-area: pfp;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }

        #profile-preview-container {
            position: relative;
            border-radius: 50%;
            overflow: hidden;
            width: 90%;
            max-width: 12.5rem;
            aspect-ratio: 1/1;
        }

        #profile-preview-container img {
            position: absolute;
            left: 50%;
            top: 50%;
            transform: translate(-50%, -50%);
        }

        #profile-preview-container img.horizontal-fit {
            width: 100%;
            object-fit: contain;
        }

        #profile-preview-container img.vertical-fit {
            height: 100%;
            object-fit: contain;
        }

        #change-email-button {
            width: 1.5rem;
            height: 1.5rem;
            background-image: url("/img/edit.png");
            background-size: contain;
            background-position: center;
            background-repeat: no-repeat;
            cursor: pointer;
            transition: filter 0.3s ease;
            margin-right: 0.4rem;
        }

        #change-email-button:hover {
            filter: brightness(2);
        }

        #change-email-button-loader {
            width: 1.5rem;
            height: 1.5rem;
            background-image: url("/img/loading.gif");
            background-size: 190%;
            background-position: center;
            background-repeat: no-repeat;
            margin-right: 0.4rem;
        }
    </style>
}

<div class="container">
    <div class="title">My Account</div>

    <form enctype="multipart/form-data" method="post">
        <div style="grid-area: info;">
            <div class="form-group">
                <label asp-for="Name"></label>
                <div class="form-input">
                    <input asp-for="Name" />
                </div>
                <span asp-validation-for="Name"></span>
            </div>

            <div class="form-group">
                <label asp-for="PhoneNumber"></label>
                <div class="form-input">
                    <input asp-for="PhoneNumber" data-phone placeholder="01X-XXXXXXX"/>
                </div>
                <span asp-validation-for="PhoneNumber"></span>
            </div>

            <div class="form-group">
                <label asp-for="Email"></label>
                <div class="input-group">
                    <div class="form-input">
                        <input type="password" asp-for="Email" value="@Model.Email" readonly />
                        <input type="checkbox" class="password-show-button">

                        @if (Model.Email != "superchef.system@gmail.com")
                        {
                            <a data-ajax="true" data-ajax-loading="#change-email-button-loader"
                                data-ajax-url="@Url.Action("RequestChangeEmail", "Account")" data-ajax-method="post"
                                data-ajax-confirm="Are you sure you want to change your email address?"
                                data-ajax-failure="defaultOnFailure" data-ajax-begin="changeEmailBegin" data-ajax-complete="changeEmailComplete"
                                data-ajax-success="changeEmailSuccess" id="change-email-button"></a>
                        }

                        <div id="change-email-button-loader" style="display: none;"></div>
                    </div>
                </div>
            </div>

            <div class="button-group" data-flex="column">
                <button data-enable-on-change type="submit" data-button="success" disabled>Save Changes</button>
                <a href="@Url.Action("ChangePassword", "Account")" data-button="info">Change
                    Password</a>

                @if (Model.Email != "superchef.system@gmail.com")
                {
                    <a data-ajax="true" data-ajax-method="post" data-ajax-url="@Url.Action("RequestDeleteAccount", "Account")"
                        data-ajax-confirm="Are you sure you want to delete your account?"
                        data-ajax-begin="deleteAccountBegin" data-ajax-complete="deleteAccountComplete" data-ajax-failure="defaultOnFailure"
                        data-ajax-success="deleteAccountSuccess" id="delete-account-button" data-button="danger">Delete Account</a>
                }
            </div>
        </div>

        <div class="divider" data-orientation="vertical"></div>

        <div id="pfp-container">
            <input type="file" id="profile-picture-file" asp-for="Image" accept="image/jpeg, image/png" hidden />
            <input id="remove-image-checkbox" asp-for="RemoveImage" hidden />
            <input id="change-image-checkbox" name="change-image-checkbox" type="checkbox" hidden>
            <input id="image-x" asp-for="ImageX" hidden>
            <input id="image-y" asp-for="ImageY" hidden>
            <input id="image-scale" asp-for="ImageScale" hidden>

            <div id="profile-preview-container">
                <img id="profile-preview" src="@ViewBag.AccountImageUrl" class="vertical-fit" alt="Profile Picture" />
            </div>

            <div class="form-group">
                <span asp-validation-for="Image"></span>
            </div>

            <div class="button-group">
                <button type="button" id="upload-profile-picture-button" data-button="accent">Upload</button>
                <button type="button" id="remove-profile-picture-button" data-button="danger" @(ViewBag.AccountImageUrl ==
                                                                                                       "/img/pfp.png" ? "disabled" : "")>Remove</button>
                <button type="button" id="reset-profile-picture-button" data-button="info" disabled>Reset</button>
            </div>
        </div>
    </form>
</div>

<div id="upload-overlay" class="overlay upload-overlay">
    <div class="content">
        <div class="header">
            <div class="title">Upload Profile Picture</div>
            <div class="close"></div>
        </div>
        <div class="body">
            <div class="upload-drop-zone" class="show">
                <div>Drag and drop your image here or click to select</div>
            </div>
            <div class="upload-preview-zone">
                <div class="upload-preview-container" class="show">
                    <img class="upload-preview-image" draggable="false" />
                    <div class="upload-overlay-circle"></div>
                </div>
                <input type="range" class="zoom-slider" min="1" max="2" step="0.01" />
                <button class="confirm-upload" data-button="accent">Confirm</button>
            </div>
        </div>
    </div>
</div>

@section foot {
    <script>
        function changeEmailBegin() {
            $(this).hide()
        }

        function changeEmailComplete() {
            $(this).show()
        }

        function changeEmailSuccess(data, status, xhr) {
            window.location.href = `/Auth/Verify?Token=${xhr.responseText}`
        }

        function deleteAccountBegin() {
            $(this).attr("data-button", "disabled")
            $(this).text("Pending...")
        }

        function deleteAccountComplete() {
            $(this).text("Delete Account")
            $(this).attr("data-button", "danger")
        }

        function deleteAccountSuccess(data, status, xhr) {
            window.location.href = `/Auth/Verify?Token=${xhr.responseText}`
        }

        const originalSrc = $("#profile-preview").attr("src")
        const noPfp = originalSrc === "/img/pfp.png"
        const uploadOverlay = new UploadOverlay("#profile-picture-file")

        $("#upload-profile-picture-button").on("click", async function () {
            const uploadResult = await uploadOverlay.open()
            if (uploadResult) {
                if (uploadResult.horizontalFit) {
                    $("#profile-preview").addClass("horizontal-fit")
                    $("#profile-preview").removeClass("vertical-fit")
                } else {
                    $("#profile-preview").addClass("vertical-fit")
                    $("#profile-preview").removeClass("horizontal-fit")
                }

                $("#profile-preview").attr("src", uploadResult.src)
                $("#image-x").val(uploadResult.imgX)
                $("#image-y").val(uploadResult.imgY)
                $("#image-scale").val(uploadResult.scale)
                updateImagePreview("#profile-preview", $("#image-x").val(), $("#image-y").val(), $("#image-scale").val())

                $("#change-image-checkbox").prop("checked", true).trigger("change")
                $("#remove-image-checkbox").prop("checked", false).trigger("change")
                $("#remove-profile-picture-button").prop("disabled", false)
                $("#reset-profile-picture-button").prop("disabled", false)
            }
        })

        $("#reset-profile-picture-button").on("click", async function () {
            $("#profile-picture-file").val("") // remove file input value

            $("#image-x").val(0)
            $("#image-y").val(0)
            $("#image-scale").val(1)
            updateImagePreview("#profile-preview", $("#image-x").val(), $("#image-y").val(), $("#image-scale").val())

            $("#profile-preview").attr("src", originalSrc)
            $("#profile-preview").addClass("vertical-fit")
            $("#profile-preview").removeClass("horizontal-fit")

            $("#change-image-checkbox").prop("checked", false).trigger("change")
            $("#remove-image-checkbox").prop("checked", false).trigger("change")
            $("#remove-profile-picture-button").prop("disabled", noPfp)
            $("#reset-profile-picture-button").prop("disabled", true)
        })

        $("#remove-profile-picture-button").on("click", async function () {
            if (await confirmation("Are you sure you want to remove your profile picture?", "Yes")) {
                $("#change-image-checkbox").prop("checked", false).trigger("change")
                $("#remove-image-checkbox").prop("checked", !noPfp).trigger("change")
                $("#remove-profile-picture-button").prop("disabled", true)
                $("#reset-profile-picture-button").prop("disabled", noPfp)

                $("#profile-preview").css("transform", "")
                $("#profile-preview").addClass("vertical-fit")
                $("#profile-preview").removeClass("horizontal-fit")
                $("#profile-preview").attr("src", "/img/pfp.png")
            }
        })
    </script>
}
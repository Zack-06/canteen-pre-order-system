    <style>
        input[type="checkbox"] {
            margin: 0;
            padding: 0;
            width: 1.2rem;
            height: 1.2rem;
        }

        label:has(#select-all-checkbox) {
            display: flex;
            gap: 1rem;
        }

        .delete-button {
            display: block;
            width: 2rem;
            height: 2rem;
            background-image: url("/img/delete.png");
            background-size: 100%;
            background-position: center;
            background-repeat: no-repeat;
            transition: all 0.3s ease;
            position: relative;
        }

        .delete-button:hover,
        .delete-button:hover {
            background-image: url("/img/delete_red.png");
        }

        .cart-item-container {
            display: grid;
        }

        .cart-item-container>input[type="checkbox"] {
            grid-area: checkbox;
        }

        .cart-item-container>img {
            grid-area: img;
        }

        .cart-item-container>.info {
            grid-area: info;
        }

        .cart-item-container>.price {
            grid-area: price;
            color: var(--text-price);
            text-shadow: var(--shadow-price);
            font-size: 1.1rem;
            font-weight: var(--font-weight-medium);
        }

        .cart-item-container>.price::before {
            content: "RM";
            color: var(--text-price);
            font-family: var(--font-primary);
            font-size: 0.8rem;
            font-weight: var(--font-weight-bold);
            margin-right: 0.25rem;
        }

        .cart-item-container>.quantity {
            grid-area: quantity;
        }

        .cart-item-container>.delete-button {
            grid-area: delete;
        }
    </style>

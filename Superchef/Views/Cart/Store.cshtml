@section head {
    <style>
        input[type="checkbox"] {
            margin: 0;
            padding: 0;
            width: 1.2rem;
            height: 1.2rem;
        }

        label:has(#select-all-checkbox) {
            display: flex;
            gap: 1rem;
        }

        .delete-button {
            display: block;
            width: 2rem;
            height: 2rem;
            background-image: url("/img/delete.png");
            background-size: 100%;
            background-position: center;
            background-repeat: no-repeat;
            transition: all 0.3s ease;
            position: relative;
        }

        .delete-button:hover,
        .delete-button:hover {
            background-image: url("/img/delete_red.png");
        }

        .cart-item-container {
            display: grid;
            grid-template-columns: auto auto 1fr auto auto auto;
            grid-template-areas: "checkbox img info price quantity delete";
            align-items: center;
            column-gap: 1rem;
            overflow-wrap: anywhere;
        }

        .cart-item-container>input[type="checkbox"] {
            grid-area: checkbox;
        }

        .cart-item-container>label:has(img) {
            grid-area: img;
        }

        .cart-item-container>label:has(img) img {
            width: clamp(4.5rem, 10vw, 7rem);
            aspect-ratio: 1/1;
        }

        .cart-item-container>.info {
            grid-area: info;
        }

        .cart-item-container .item {
            font-size: 1.15rem;
            font-weight: var(--font-weight-semibold);
            font-family: var(--font-display);
            margin-bottom: 0.2rem;
            color: var(--text-primary) !important;
        }

        .cart-item-container .variant {
            color: var(--text-secondary);
        }

        .cart-item-container>.price {
            grid-area: price;
            color: var(--text-price);
            text-shadow: var(--shadow-price);
            font-size: 1.2rem;
            font-weight: var(--font-weight-medium);
            font-family: var(--font-display);
        }

        .cart-item-container>.price::before {
            content: "RM";
            color: var(--text-price);
            font-family: var(--font-primary);
            font-size: 0.9rem;
            font-weight: var(--font-weight-bold);
            margin-right: 0.25rem;
        }

        .cart-item-container>.quantity {
            grid-area: quantity;
            width: 9rem;
            display: grid;
            grid-template-columns: 1fr;
            grid-template-rows: 1fr;
            justify-self: end;
            position: relative;
        }

        .cart-item-container>.quantity:has(.field-validation-error) {
            min-height: 7.5rem;
        }

        .cart-item-container>.quantity .form-input {
            align-self: center;
            justify-self: center;
            grid-area: 1 / 1;
        }

        .cart-item-container .error {
            font-size: 0.9rem;
            align-self: end;
            grid-area: 1 / 1;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
            display: none;
            text-align: center;
        }

        .cart-item-container .field-validation-error {
            display: block;
        }

        .cart-item-container>.delete-button {
            grid-area: delete;
        }

        .cart-item-container .form-group {
            margin-bottom: 0;
        }

        @@media (max-width: 680px) {
            .cart-item-container {
                grid-template-columns: auto auto 1fr auto;
                grid-template-areas:
                    "checkbox img info delete"
                    "price price quantity quantity"
                ;
                row-gap: 1.5rem;
            }

            .cart-item-container>.price,
            .cart-item-container>.quantity {
                align-self: baseline;
                min-height: unset !important;
            }

            .cart-item-container .error {
                grid-area: 2/1;
            }
        }
    </style>
}

